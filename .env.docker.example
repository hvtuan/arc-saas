# ===========================================
# ARC SaaS Docker Environment Configuration
# ===========================================
# Copy this file to .env.docker and update with your values

# ===========================================
# PostgreSQL Configuration
# ===========================================
# Tenant Management Database
POSTGRES_TENANT_DB=tenant_management_db
POSTGRES_TENANT_USER=postgres
POSTGRES_TENANT_PASSWORD=postgres_password
POSTGRES_TENANT_PORT=5432

# Subscription Database
POSTGRES_SUBSCRIPTION_DB=subscription_db
POSTGRES_SUBSCRIPTION_USER=postgres
POSTGRES_SUBSCRIPTION_PASSWORD=postgres_password
POSTGRES_SUBSCRIPTION_PORT=5433

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DATABASE_TENANT=0
REDIS_DATABASE_SUBSCRIPTION=1

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ISSUER=https://arc-saas.local

# ===========================================
# Tenant Management Service Configuration
# ===========================================
TENANT_MGMT_PORT=3005
TENANT_MGMT_HOST=0.0.0.0
TENANT_MGMT_LOG_LEVEL=info

# Webhook & Token Configuration
WEBHOOK_SECRET_EXPIRY=1200000
VALIDATION_TOKEN_EXPIRY=300000
LEAD_TOKEN_EXPIRY=900
LEAD_KEY_LENGTH=36
PUBLIC_API_MAX_ATTEMPTS=10
WEBHOOK_API_MAX_ATTEMPTS=10

# Application URLs
APP_VALIDATE_URL=http://localhost:4200/tenant/verify

# ===========================================
# Subscription Service Configuration
# ===========================================
SUBSCRIPTION_PORT=3002
SUBSCRIPTION_HOST=0.0.0.0
SUBSCRIPTION_LOG_LEVEL=info

# ===========================================
# Orchestrator Service Configuration
# ===========================================
ORCHESTRATOR_PORT=3003
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_LOG_LEVEL=info

# ===========================================
# Database Pool Configuration
# ===========================================
ENABLE_DB_CONNECTION_POOLING=1
DB_MAX_CONNECTIONS=25
DB_IDLE_TIMEOUT_MILLIS=60000
DB_CONNECTION_TIMEOUT_MILLIS=2000

# ===========================================
# AWS Configuration (Optional)
# ===========================================
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_EVENTBRIDGE_BUS_NAME=arc-saas-events

# ===========================================
# Identity Provider Configuration (Optional)
# ===========================================
# Keycloak
# KEYCLOAK_HOST=http://keycloak:8080
# KEYCLOAK_REALM=arc-saas
# KEYCLOAK_CLIENT_ID=arc-saas-client
# KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Auth0
# AUTH0_DOMAIN=your-domain.auth0.com
# AUTH0_CLIENT_ID=your-auth0-client-id
# AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:3005/auth/google/callback

# ===========================================
# pgAdmin Configuration
# ===========================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ===========================================
# Redis Commander Configuration
# ===========================================
REDIS_COMMANDER_PORT=8081

# ===========================================
# Node Environment
# ===========================================
NODE_ENV=development
